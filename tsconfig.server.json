{
	"compilerOptions": {
	  "module": "commonjs",
	  "noImplicitAny": false,
	  "removeComments": true,
	  "typeRoots": ["node_modules/@types", "./typings"],
	  "esModuleInterop": true,
	  "experimentalDecorators": true,
	  "target": "es2017",
	  "baseUrl": ".",
	  "jsx": "react",
	  "skipLibCheck" : true,
	  "sourceMap": true,
	  "inlineSources": true,
	  "paths": {
		  "controllers/*": ["server/controllers/*"],
		  "interfaces/*": ["server/interfaces/*"],
		  "middlewares/*": ["server/middlewares/*"],
		  "models/*": ["server/models/*"],
		  "root/*": ["server/*"],
		  "sdecorators/*": ["server/decorators/*"]
	  }
	},
	"include": ["server/"],
	"exclude": ["node_modules", "./client", "./server/compiled"]
}