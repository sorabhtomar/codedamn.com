{
	"compilerOptions": {
	  "module": "esnext",
	  "moduleResolution": "node",
	  "noImplicitAny": false,
	  "removeComments": true,
	  "typeRoots": ["node_modules/@types", "./typings/declarations.d.ts"],
	  "esModuleInterop": true,
	  "experimentalDecorators": true,
	  "target": "es2017",
	  "baseUrl": ".",
	  "jsx": "react",
	  "skipLibCheck" : true,
	  "sourceMap": true,
	  "inlineSources": true,
	  "paths": {
		  "components/*": ["client/source/components/*"],
		  "decorators/*": ["client/source/decorators/*"],
		  "reducers/*": ["client/source/redux/reducers/*"]
	  }
	},
	"include": ["client/source"],
	"exclude": ["node_modules", "./server"]
}